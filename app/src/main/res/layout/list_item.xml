<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="40dp" android:minHeight="40dp" android:gravity="center_vertical" android:text="Nr"
            android:paddingLeft="10dp" android:textSize="18sp"/>
    <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp" android:gravity="center_vertical" android:text="Index"
            android:paddingLeft="10dp" android:textSize="18sp" android:width="220dp"/>
    <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:minHeight="40dp" android:gravity="center_vertical" android:text="Result"
            android:paddingLeft="10dp" android:textSize="18sp"/>
</LinearLayout>